{
    "manifest_version": 3,
    "name": "DeskTime for Anchora",
    "version": "1.1",
    "description": "Fills in the description for a DeskTime entry following Anchora's policies",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    },
    "host_permissions": [
         "*://*.desktime.com/*"
     ]
  }